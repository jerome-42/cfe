extends layout.pug

block scripts
  title Mes déclarations
  script(src="js/listeCFE.js")

block content
  .row
    h1 Mes déclarations (#{$name} - #{$givavNumber})
  .row
    .col-md-3.offset-md-9
      .row
        label.col-sm-3.col-form-label(for="search") Recherche:&nbsp;&nbsp;
        .col-sm-9
          input.form-control(type="text" placeholder="")#search
  .row
    .col-12
      table.table.table-striped#list
        thead
          tr
            th Date
            th Type
            th Bénéficiaire
            th Durée
            th Détails
        tbody
          each line in $lines
            tr(x-validation=$line['Validation'])
              td #{$line['Validation']}
              td #{$line['DateTravaux']}
              td #{$line['TypeTravaux']}
              td #{$line['Bénéficiaire']}
              td #{$line['Durée']}
              td #{$line['Détails']}
        tfoot
          tr
            th Date
            th Type
            th Bénéficiaire
            th Durée
            th Détails
  .hstack.gap-4.mb-3
    button.btn.btn-danger.back Retour
    button.btn.btn-primary.download Télécharger en CSV
