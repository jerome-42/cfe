extends layout.pug

block scripts
  script(src="js/index.js")

block content
  .container
    .row
      $msg="Bonjour " . $name . " (".$givavNumber.")"
      h1
        p= $msg
    .row
      p= "Heures de CFE à faire : " . $thecfetodo
      p= "Heures de CFE soumises : " . $submited
      p= "Heures de CFE validées : " . $validated
      $reste = $thecfetodo - $validated
      p= "Heures de CFE restant à faire : " . $reste

    .hstack.gap-4.mb-3
      button.btn.btn-warning#liste validations
      button.btn.btn-info(type='button') Télécharger
      button.btn.btn-success#declaration Déclarer
      button.btn.btn-danger#logout Déconnexion
